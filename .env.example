# Docker Development Toolkit Environment Variables
# Copy this file to .env and customize as needed

# ======================
# Database Configuration
# ======================

# MySQL Configuration
MYSQL_ROOT_PASSWORD=rootpass
MYSQL_DATABASE=app_db
MYSQL_USER=user
MYSQL_PASSWORD=userpass
MYSQL_PORT=3306

# PostgreSQL Configuration
POSTGRES_USER=pguser
POSTGRES_PASSWORD=pgpass
POSTGRES_DB=app_pgdb
POSTGRES_PORT=5432

# ======================
# Service Ports
# ======================

# FrankenPHP Ports
FRANKENPHP_HTTP_PORT=8080
FRANKENPHP_HTTPS_PORT=8443

# Redis Port
REDIS_PORT=6379

# Web Interface Ports
ADMINER_PORT=8081
MAILHOG_WEB_PORT=8025
MAILHOG_SMTP_PORT=1025

# ======================
# Application Settings
# ======================

# Timezone
TZ=Asia/Jakarta

# Application Environment
APP_ENV=local
APP_DEBUG=true

# ======================
# Optional Services
# ======================

# Nginx (if using nginx service)
NGINX_PORT=80

# Node.js (if using node service)
NODE_PORT=3000

# ======================
# Volume Paths
# ======================

# Custom mount points (advanced users)
# HOST_PROJECT_PATH=/home/user/projects
# CONTAINER_PROJECT_PATH=/workspace

# Composer cache directory
COMPOSER_CACHE_DIR=~/.composer
